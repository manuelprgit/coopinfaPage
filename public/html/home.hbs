                <div class="images-content">
                    <figure>
                        <img src="./src/img/mother-daugther.jpeg" alt="Madre besando y abrazando su hija" class="first-pic">
                    </figure>
                    <figure>
                        <img src="./src/img/family.jpg" alt="Pareja abrazandose y siendo feliz" class="second-pic">
                    </figure>
                    <figure>
                        <img src="./src/img/mother.jpg" alt="Madre dando beso de nariz a su hijo" class="treth-pic">
                    </figure>
                </div>
