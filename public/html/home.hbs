    <div class="page-content">
        <section class="head-section">
            <div class="layer"></div>
            <img src="./src/img/nature.jpg" alt="" class="img-fondo">
            {{> head}}
            <div class="text-content"> 
                <h1>Cooperativa de Ahorros, Créditos y Servicios Múltiples de los Integrantes de las Fuerzas Armadas</h1>
            </div>
        </section>
        <section class="loan-info-content">
            <div class="type-loan-content">
                <div class="type-loan">
                    <figure>
                        <img src="./src/icon/hand-money.png" alt="Tipos de prestamo">
